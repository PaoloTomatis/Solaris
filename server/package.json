{
    "name": "server",
    "private": true,
    "version": "1.0.0",
    "description": "server of Solaris HUB",
    "homepage": "https://github.com/PaoloTomatis/Solaris#readme",
    "bugs": {
        "url": "https://github.com/PaoloTomatis/Solaris/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/PaoloTomatis/Solaris.git"
    },
    "license": "ISC",
    "author": "Paolo Tomatis",
    "main": "server.ts",
    "type": "module",
    "directories": {
        "doc": "docs"
    },
    "scripts": {
        "build": "tsc",
        "start": "node dist/server.js",
        "build:watch": "tsc --watch --preserveWatchOutput",
        "server:watch": "nodemon --watch dist --delay 1 --exec \"node dist/server.js\"",
        "dev": "npm run build && concurrently -n BUILD,SERVER -c red,cyan \"npm run build:watch\" \"npm run server:watch\""
    },
    "keywords": [
        "gardening",
        "automation",
        "dashboard",
        "web",
        "app",
        "plants"
    ],
    "dependencies": {
        "bcrypt": "^6.0.0",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^17.2.2",
        "express": "^5.1.0",
        "express-rate-limit": "^8.2.1",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.18.1",
        "nanoid": "^5.1.6",
        "socket.io": "^4.8.1",
        "uuid": "^13.0.0",
        "ws": "^8.18.3",
        "zod": "^4.3.2"
    },
    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/cookie-parser": "^1.4.9",
        "@types/cors": "^2.8.19",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^5.0.3",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/mongoose": "^5.11.96",
        "@types/nanoid": "^2.1.0",
        "@types/socket.io": "^3.0.1",
        "@types/uuid": "^10.0.0",
        "@types/ws": "^8.18.1",
        "concurrently": "^9.2.1",
        "nodemon": "^3.1.10"
    }
}
